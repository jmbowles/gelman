# Dogs example 

model {
  for (j in 1:n.dogs){  
    n.avoid[j,1] <- 0
    n.shock[j,1] <- 0
    for (t in 2:n.trials){  
      n.avoid[j,t] <- n.avoid[j,t-1] + 1 - y[j,t-1] 
      n.shock[j,t] <- n.shock[j,t-1] + y[j,t-1] 
    }
    for (t in 1:n.trials){  
      y[j,t] ~ dbin (p[j,t], 1)
      logit(p[j,t]) <- b.0 + b.1*n.avoid[j,t] + b.2*n.shock[j,t]
    }
   }
  b.0 ~ dnorm (0, .0001)
  b.1 ~ dnorm (0, .0001)
  b.2 ~ dnorm (0, .0001)
}
